<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <!--tema para admin de cliente-->
    <style name="AppTheme.Cliente">
        <item name="colorPrimary">@color/success_dark</item>
    </style>
    <!--tema para view de cliente-->
    <!--<style name="AppTheme.Detail">-->
    <style name="AppTheme.Detail" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Habilitar la Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--Colores-->
        <item name="colorPrimary">@color/success</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/warning</item>
    </style>

    <style name="CustomActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="cardView_title">
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@color/gray_dark</item>
    </style>

    <style name="cardView_text_midel">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="cardView_text_final">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">15dp</item>

    </style>

    <style name="cardView_subtext_midel">
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textSize">14dp</item>

    </style>

    <style name="cardView_subtext_final">
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">14dp</item>

    </style>
</resources>
